{
    "manifest_version": 3,
    "version": "2.1.0",
    "name": "Notion - Add to calendar",
    "description": "This extension create a link for save notion event in google calendar",
    "offline_enabled": true,
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.notion.so/*",
                "*://*.notion.site/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}